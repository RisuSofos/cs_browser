<Window x:Class="Risu_Web.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:html="clr-namespace:TheArtOfDev.HtmlRenderer.WPF;assembly=HtmlRenderer.WPF"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="RisuWeb" Height="450" Width="800">
    <Grid>
        <html:HtmlPanel x:Name="Site"
                        Background="Black" Margin="0,30,0,0"
                        LinkClicked="Site_LinkClicked">
        </html:HtmlPanel>
        <Grid x:Name="BrowserUi" VerticalAlignment="Top" HorizontalAlignment="Stretch" Height="30">
            <TextBox x:Name="SearchBar" VerticalAlignment="Top" Height="30" HorizontalAlignment="Stretch" Margin="0, 0, 120, 0"/>
            <Button x:Name="SearchButton" VerticalAlignment="Top" Height="30" HorizontalAlignment="Right" Width="120" Content="Search" Background="Gray" Click="Button_Click"></Button>
        </Grid>
    </Grid>
</Window>
